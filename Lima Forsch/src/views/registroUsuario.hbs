<link rel="stylesheet" href="styles/registroUsuario2.css">
<script type="text/javascript" src="js/forms.js"></script>

<div id="contenido">
    <!--<div id="registro">-->
        <div id="registro_body">
            <form name="registerForm" action="/add-user" method="POST" onsubmit="return validateRegisterForm()">
                <ul>
                    <li>
                        <span>Nombre</span><br>
                        <input class="inpt1" id="input_nombre" name="nombre_registro" class="input_form" type="text" onclick="color(this)" required><br>
                    </li>
                    <li>
                        <span>Contrase√±a <ion-icon name="eye-off-outline" id="showIcon" onclick="showPass(`showIcon`)"></ion-icon> </span><br>
                        <input class="inpt1" id="input_contrasena" name="contrasena_registro" class="input_form" type="password" onclick="color(this)" required>  <br>
                    </li>
                    <li>
                        <span>Correo</span><br>
                        <input class="inpt1" id="input_email" name="email_registro" class="input_form" type="email" onclick="color(this)" required><br>
                    </li>
                    <li>
                        <span>Nivel de usuario</span><br>
                        <input class="inpt1" id="input_nivel" name="nivel_registro" class="input_form" type="number" min="1" max="3" value="1" onclick="color(this)" required>
                    </li>
                    <li>
                        <input type="submit" class="btn2" id="btn_confirmar" value="Confirmar registro">
                    </li>
                    <li>
                        <a href="/login">Regresar</a>
                    </li>
                    <li>
                        <!--_________________Mensaje de error______________-->
                        {{#if errorMsg}}
                            <div id="error">{{errorMsg}}</div>
                        {{/if}}
                    </li>
                </ul>
            </form>
        <!--</div>-->
    </div>
</div>

